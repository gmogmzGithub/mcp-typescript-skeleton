{
    "name": "mcp-typescript-skeleton",
    "version": "1.0.0",
    "description": "TypeScript MCP Server Template - A skeleton for building Model Context Protocol servers",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "build": "tsc",
        "check": "tsc --noEmit",
        "start": "node dist/index.js",
        "start:dev": "ts-node-dev --inspect -- ./src/index.ts",
        "postbuild": "cpy 'src/**/*' '!*(.ts|.js)' dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/mcp-typescript-skeleton.git"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "typescript",
        "template",
        "server",
        "skeleton"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@koa/router": "^12.0.1",
        "fastmcp": "^3.16.0",
        "koa": "^2.15.3",
        "koa-bodyparser": "^4.4.1",
        "koa-proxies": "^0.12.4"
    },
    "devDependencies": {
        "@types/koa": "^2.13.12",
        "@types/koa__router": "^12.0.4",
        "@types/koa-bodyparser": "^4.3.12",
        "@types/node": "^20.14.2",
        "cpy-cli": "^4.1.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    }
}
